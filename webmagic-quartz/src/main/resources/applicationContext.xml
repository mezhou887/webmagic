<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

  <!-- quartz的调度工厂 调度工厂只能有一个，多个调度任务在list中添加 -->
  <bean name="startQuertz" lazy-init="false" autowire="no" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="triggers">
      <list>
         <!-- 所有的调度列表-->
        <ref bean="myTestTrigger" />
      </list>
    </property>
  </bean>

  <!--配置调度执行的触发的时间-->
  <bean id="myTestTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
    <property name="jobDetail" ref="myTestDetail" />
    <property name="cronExpression">
      <!-- 每天早上8点执行任务调度 -->
      <value>0 0/1 * * * ?</value>
    </property>
  </bean>
  
  <!--配置调度具体执行的方法-->
  <bean id="myTestDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    <property name="targetObject" ref="myTestSchedule" />
    <property name="targetMethod" value="printSomething" />
  </bean>
  
  <!-- 添加调度的任务bean 配置对应的class-->
  <bean id="myTestSchedule" class="com.mezhou887.test.quartz.schedule.MyTestSchedule" />

</beans>